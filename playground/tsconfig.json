{
  "compilerOptions": {
    "moduleResolution": "node",
    "lib": ["dom", "es6", "scripthost", "dom.iterable", "es2019"],
    "target": "es2015",
    "experimentalDecorators": true,
    "jsx": "react",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "typeRoots": [
      "../src/types",
      "../node_modules/@types",
      "./node_modules/@types"
    ],
    "baseUrl": "../",
    "outDir": "./www",
    "paths": {
      "##platform-dependent-parts": ["../src/ts2php/browser.specific.ts"],
      "##playground": ["../src/playground.ts"]
    }
  },
  "exclude": [
    "../demo/**/*",
    "../dist/**/*",
    "../src/__tests__/watchSpecimens.~/**/*",
    "../src/__tests__/watchSpecimens___/**/*",
    "../src/__tests__/watchSpecimens/**/*",
    "../src/__tests__/specimens/**/*",
    "../node_modules/**/*",
    "node_modules/**/*"
  ]
}
